{
  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["prettier"],
  "env": {
    "es6": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "ignorePatterns": ["**/test/__fixtures__/**/*"],
  "rules": {
    "prettier/prettier": "error",
    "no-console": 2
  },
  "overrides": [
    {
      "files": ["**/test/**/*.test.js"],
      "rules": {
        "prettier/prettier": "error"
      },
      "env": {
        "mocha": true
      }
    }
  ]
}
